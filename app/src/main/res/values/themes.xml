<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hydraware" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#22223A</item>
        <item name="colorPrimaryVariant">#1A1026</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:windowBackground">#1A1026</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:colorBackground">#1A1026</item>
        <item name="android:colorForeground">#FFFFFF</item>
        <item name="colorSurface">#22223A</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:navigationBarColor">#1A1026</item>
        <item name="android:statusBarColor">#1A1026</item>
        <!-- Primary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Hydraware.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Hydraware.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Hydraware.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>