<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/white">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp">

            <ImageView
                android:id="@+id/phStatusIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_ph_normal"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textPhValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.00"
                android:textSize="48sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textPhStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Neutro"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <ProgressBar
                android:id="@+id/progressBarPh"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="70"
                android:layout_marginBottom="16dp" />

            <!-- Temperatura -->
            <ImageView
                android:id="@+id/tempStatusIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_ph_normal"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textTempValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25°C"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textTempStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ambiental"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Aquí irá la gráfica de pH y temperatura]"
        android:textSize="18sp"
        android:textColor="#888888" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/purple_500"
        app:tabSelectedTextColor="@color/purple_700"
        app:tabTextColor="@color/black" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout> 